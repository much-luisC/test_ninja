<?xml version="1.0"?>
<odoo>
  <template id="report_invoice_with_payments_much_custom_din5008" inherit_id="account.report_invoice_with_payments">
    <xpath expr="/t" position="replace">
      <t t-name="account.report_invoice_with_payments">
        <t t-call="web.html_container">
          <t t-foreach="docs" t-as="o">
            <t t-set="report" t-value="o.sudo().company_id.external_report_layout_id.name.split('_')[-1] if o.sudo().company_id.external_report_layout_id and o.sudo().company_id.external_report_layout_id.name.split('_')[-1] not in ['background', 'boxed', 'clean', 'standard', 'document', 'din5008'] else ''" />
            <t t-set="lang" t-value="o.invoice_user_id.sudo().lang if o.move_type in ('in_invoice', 'in_refund') else o.partner_id.lang"/>
            <t t-set="print_with_payments" t-value="True"/>
            <t t-if="report != ''" t-call="updater_account.report_invoice_document_with_payments_din5008_{{report}}" t-lang="lang" />
            <t t-elif="o._get_name_invoice_report() == 'account.report_invoice_document'" t-call="account.report_invoice_document" t-lang="lang"/>
            <t t-else="" t-call="account.report_invoice_document" t-lang="lang" />
          </t>
        </t>
      </t>
    </xpath>
  </template>
</odoo>