<?xml version="1.0"?>
<odoo>
    <record id="report_invoice_document_din5008_much" model="ir.ui.view">
        <field name="name">report_invoice_document_din5008_much</field>
        <field name="type">qweb</field>
        <field name="arch" type="xml">
            <t t-name="report_invoice_document_din5008_much">
                <t t-call="web.external_layout">
                    <t t-set="font" t-value="o.company_id.font or 'Lato'"/>
                    <t t-set="primary"
                       t-value="o.company_id.primary_color or '#ea5747'"/>
                    <t t-set="secondary"
                       t-value="o.company_id.secondary_color or '#ffffff'"/>

                    <style type="text/css">
                        .terms a{
                        color:<t t-esc="primary"/>!important;
                        }
                    </style>
                    <t t-set="o" t-value="o.with_context(lang=lang)"/>
                    <t t-set="address">
                        <address style="display:none;"/>
                    </t>

                    <div class="row" style="font-size: 12px;">
                        <div class="col-6 text-left" style="padding-top: 10px;">
                            <t t-if="o.partner_id.parent_id">
                                <p class="text-left" style="margin:0;">
                                    <t t-esc="o.partner_id.parent_id.name"/>
                                </p>
                            </t>
                            <t t-elif="o.partner_id.company_name">
                                <p class="text-left" style="margin:0;">
                                    <t t-esc="o.partner_id.company_name"/>
                                </p>
                            </t>
                            <p class="text-left" style="margin:0;">
                                <span t-field="o.partner_id.name"/>
                            </p>
                            <p class="text-left" style="margin:0;">
                                <span t-field="o.partner_id.street"/>
                            </p>
                            <p t-if="o.partner_id.street2" class="text-left"
                               style="margin:0;">
                                <span t-field="o.partner_id.street2"/>
                            </p>
                            <p class="text-left" style="margin:0;">
                                <span t-field="o.partner_id.zip"/>
                                <span t-field="o.partner_id.city"/>
                            </p>
                            <p t-if="o.partner_id.country_id" class="text-left"
                               style="margin:0;">
                                <span t-field="o.partner_id.country_id.name"/>
                            </p>

                            <p t-if="o.partner_id.vat" class="text-left"
                               style="margin:0;">
                                VAT:
                                <span t-field="o.partner_id.vat"/>
                            </p>
                        </div>
                        <div class="col-6 text-left">
                            <div class="row">
                                <div class="col-6">
                                    <p t-if="o.name and o.name != '/'" class="text-left"
                                       style="margin:0;">Invoice No.
                                    </p>
                                    <p t-if="o.invoice_date" class="text-left"
                                       style="margin:0;">Invoice Date
                                    </p>
                                    <p t-if="o.invoice_date_due" class="text-left"
                                       style="margin:0;">Due Date
                                    </p>
                                    <p t-if="o.invoice_origin" class="text-left"
                                       style="margin:0;">Source
                                    </p>
                                    <p t-if="o.ref" class="text-left"
                                       style="margin:0;">Customer Reference
                                    </p>
                                </div>
                                <div class="col-6">
                                    <p t-if="o.name and o.name != '/'" class="text-left"
                                       style="margin:0;">
                                        <span t-esc="o.name"/>
                                    </p>
                                    <p t-if="o.invoice_date" class="text-left"
                                       style="margin:0;">
                                        <span t-esc="o.invoice_date"
                                              t-options="{'widget': 'date'}"/>
                                    </p>
                                    <p t-if="o.invoice_date_due" class="text-left"
                                       style="margin:0;">
                                        <span t-esc="o.invoice_date_due"
                                              t-options="{'widget': 'date'}"/>
                                    </p>
                                    <p t-if="o.invoice_origin" class="text-left"
                                       style="margin:0;">
                                        <span t-esc="o.invoice_origin"/>
                                    </p>
                                    <p t-if="o.ref" class="text-left"
                                       style="margin:0;">
                                        <span t-esc="o.ref"/>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="page" style="margin-top: 40px; font-size: 12px;">
                        <h5 style="font-weight: bold;">
                            <span t-if="o.move_type == 'out_invoice' and o.state == 'posted'">
                                Invoice
                            </span>
                            <span t-if="o.move_type == 'out_invoice' and o.state == 'draft'">
                                Draft Invoice
                            </span>
                            <span t-if="o.move_type == 'out_invoice' and o.state == 'cancel'">
                                Cancelled Invoice
                            </span>
                            <span t-if="o.move_type == 'out_refund'">Credit Note</span>
                            <span t-if="o.move_type == 'in_refund'">Vendor Credit Note
                            </span>
                            <span t-if="o.move_type == 'in_invoice'">Vendor Bill</span>
                            <span t-if="o.name != '/'" t-field="o.name"/>
                            <t t-if="o.order_title">
                                -
                                <span t-field="o.order_title"/>
                            </t>
                        </h5>
                        <span t-field="o.report_header_text"/>
                        <t t-set="display_discount"
                           t-value="any([l.discount for l in o.invoice_line_ids])"/>

                        <table class="table table-sm o_main_table"
                               style="margin-top:40px;margin-bottom: 0.3em !important;"
                               name="invoice_line_table">
                            <thead
                                    t-att-style="(o.company_id.much_layout_style == 'colorful') and 'color: %s; background-color: %s;' % (secondary ,primary) or 'color: #535353;'">
                                <tr>
                                    <th name="th_position" class="text-left py-2"
                                        style="border-top:none !important; border-bottom:none !important;">
                                        Pos.
                                    </th>
                                    <th name="th_description" class="text-left  py-2"
                                        style="border-top:none !important; border-bottom:none !important;">
                                        <span>Description</span>
                                    </th>
                                    <th name="th_quantity" class="text-right  py-2"
                                        style="border-top:none !important; border-bottom:none !important;">
                                        <span>Quantity</span>
                                    </th>
                                    <th name="th_priceunit"
                                        t-attf-class="text-right py-2 {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"
                                        style="border-top:none !important; border-bottom:none !important;">
                                        <span>Unit Price</span>
                                    </th>
                                    <th name="th_price_unit" t-if="display_discount"
                                        t-attf-class="text-right py-2 {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"
                                        style="border-top:none !important; border-bottom:none !important;">
                                        <span>Disc. %</span>
                                    </th>
                                    <th name="th_taxes"
                                        t-attf-class="text-center py-2 {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"
                                        style="border-top:none !important; border-bottom:none !important;">
                                        <span>Taxes</span>
                                    </th>
                                    <th name="th_subtotal" class="text-right py-2"
                                        style="border-top:none !important; border-bottom:none !important;">
                                        <span>Amount</span>
                                    </th>
                                </tr>
                            </thead>
                            <tbody class="invoice_tbody">
                                <t t-set="current_subtotal" t-value="0"/>
                                <t t-set="lines"
                                   t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>
                                <t t-set="count" t-value="1"/>

                                <t t-foreach="lines" t-as="line">
                                    <t t-set="current_subtotal"
                                       t-value="current_subtotal + line.price_subtotal"
                                       groups="account.group_show_line_subtotals_tax_excluded"/>
                                    <t t-set="current_subtotal"
                                       t-value="current_subtotal + line.price_total"
                                       groups="account.group_show_line_subtotals_tax_included"/>

                                    <tr
                                            t-att-style="'border-top: 1px solid #000000 !important; border-bottom: 1px solid #000000 !important;' if line.display_type in ['line_section'] and o.company_id.much_layout_style == 'bw' else 'background-color: #e9ecef;' if line.display_type in ['line_section'] and o.company_id.much_layout_style in ['colorful','slick'] else ''"
                                            t-att-class="'font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                        <t t-if="not line.display_type"
                                           name="account_invoice_line_accountable">
                                            <td name="td_pos" class="text-left py-2"
                                                style="border:none !important;">
                                                <span t-esc="count"/>
                                            </td>
                                            <td name="account_invoice_line_name"
                                                class="text-left py-2"
                                                style="border:none !important;">
                                                <span t-field="line.name"
                                                      t-options="{'widget': 'text'}"/>
                                            </td>
                                            <td class="text-right py-2"
                                                style="border:none !important;">
                                                <span t-field="line.quantity"
                                                      t-options="{&quot;widget&quot;: &quot;number&quot;}"/>
                                                <span t-field="line.product_uom_id"/>
                                            </td>
                                            <td t-attf-class="text-right py-2 {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"
                                                style="border:none !important;">
                                                <span t-field="line.price_unit"/>
                                            </td>
                                            <td t-if="display_discount"
                                                t-attf-class="text-right py-2 {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"
                                                style="border:none !important;">
                                                <span t-field="line.discount"/>
                                            </td>
                                            <td t-attf-class="text-center py-2 {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"
                                                style="border:none !important;">
                                                <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_ids))"
                                                      id="line_tax_ids"/>
                                            </td>
                                            <td class="text-right py-2 {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"
                                                style="border:none !important;">
                                                <span t-field="line.price_subtotal"
                                                      groups="account.group_show_line_subtotals_tax_excluded"/>
                                                <span t-field="line.price_total"
                                                      groups="account.group_show_line_subtotals_tax_included"/>
                                            </td>
                                        </t>
                                        <t t-if="line.display_type == 'line_section'">
                                            <td colspan="99" class="py-2"
                                                style="border: none !important;">
                                                <span t-field="line.name"
                                                      t-options="{'widget': 'text'}"/>
                                            </td>
                                            <t t-set="current_section" t-value="line"/>
                                            <t t-set="current_subtotal" t-value="0"/>
                                        </t>
                                        <t t-if="line.display_type == 'line_note'">
                                            <td name="td_pos" class="text-left py-2"
                                                style="border:none !important;">
                                                <span>&#160;</span>
                                            </td>
                                            <td colspan="99" class="py-2"
                                                style="border: none !important;">
                                                <span t-field="line.name"
                                                      t-options="{'widget': 'text'}"/>
                                            </td>
                                        </t>
                                        <t t-if="line.display_type not in ['line_section', 'line_note']"
                                           t-set="count" t-value="count+1"/>
                                    </tr>

                                    <t t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')">
                                        <tr class="is-subtotal text-right">
                                            <td colspan="99" class="py-2"
                                                style="border: none !important;">
                                                <strong class="mr16">Subtotal</strong>
                                                <span t-esc="current_subtotal"
                                                      t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                            </tbody>
                        </table>

                        <div class="clearfix">
                            <div id="total" class="row">
                                <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto">
                                    <table class="table table-sm"
                                           style="page-break-inside: avoid;">
                                        <!--Tax totals-->
                                        <t t-set="tax_totals"
                                           t-value="json.loads(o.tax_totals_json)"/>
                                        <tr class="o_subtotal"
                                            t-att-style="'border-top:1px solid #e9ecef !important;' if o.company_id.much_layout_style in ['colorful','slick'] else 'border-top:1px solid #000000 !important;'">
                                            <td class="py-2"
                                                style="border:none !important;">
                                                <span>Subtotal Net</span>
                                            </td>
                                            <td class="text-right py-2"
                                                style="border:none !important;">
                                                <span t-field="o.amount_untaxed"/>
                                            </td>
                                        </tr>
                                        <t t-foreach="tax_totals['subtotals']"
                                           t-as="subtotal">
                                            <t t-set="subtotal_to_show"
                                               t-value="subtotal['name']"/>
                                            <t t-foreach="tax_totals['groups_by_subtotal'][subtotal_to_show]"
                                               t-as="amount_by_group">
                                                <tr style="margin: 0;">
                                                    <t t-if="len(tax_totals['groups_by_subtotal'][subtotal_to_show]) > 1">
                                                        <td class="py-2"
                                                            style="border:none !important;">
                                                            <span>
                                                                <span t-esc="amount_by_group['tax_group_name']"/>
                                                            </span>
                                                        </td>
                                                        <td class="text-right o_price_total py-2"
                                                            style="border:none !important;">
                                                            <span t-esc="amount_by_group['formatted_tax_group_amount']"/>
                                                        </td>
                                                    </t>
                                                    <t t-else="">
                                                        <td class="py-2"
                                                            style="border:none !important;">
                                                            <span>
                                                                <span t-esc="amount_by_group['tax_group_name']"/>
                                                            </span>
                                                        </td>
                                                        <td style="border:none !important;"
                                                            class="text-right o_price_total py-2">
                                                            <span t-esc="amount_by_group['formatted_tax_group_amount']"/>
                                                        </td>
                                                    </t>
                                                </tr>
                                            </t>
                                        </t>
                                        <tr class="o_total"
                                            t-att-style="'border-top:1px solid #e9ecef !important;' if o.company_id.much_layout_style in ['colorful','slick'] else 'border-top:2px solid #000000 !important;'">
                                            <td class="py-2"
                                                style="border: none !important;">
                                                <span>
                                                    <strong>Total</strong>
                                                </span>
                                            </td>
                                            <td class="text-right py-2"
                                                style="border: none !important;">
                                                <span t-field="o.amount_total"/>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>

                        <div class="row pt-3 mb-2">
                            <div class="col-12">
                                <div class="mb-2" t-if="o.name and o.name!= '/'">
                                    Please use the following communication for your
                                    payment:
                                    <strong>
                                        <span t-field="o.name"/>
                                    </strong>
                                </div>
                                <div class="mb-2" t-if="not is_html_empty(o.narration)"
                                     name="comment">
                                    <span class="terms" t-field="o.narration"/>
                                </div>
                                <div class="mb-2" t-if="o.invoice_payment_term_id">
                                    <span t-field="o.invoice_payment_term_id.note"/>
                                </div>
                                <div id="qrcode"
                                     t-if="o.display_qr_code and o.amount_residual > 0">
                                    <p t-if="qr_code_urls.get(o.id)">
                                        <strong class="text-center">Scan me with your
                                            banking app.
                                        </strong>
                                        <br/>
                                        <br/>
                                        <img class="border border-dark rounded"
                                             t-att-src="qr_code_urls[o.id]"/>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </field>
    </record>
</odoo>