<?xml version='1.0' encoding='utf-8' ?>
<odoo>
    <record id="sale_order_form_much_din5008" model="ir.ui.view">
        <field name="name">sale.order.form.much.din5008</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="before">
                <field name="order_title"/>
            </xpath>
            <xpath expr="//page[@name='other_information']" position="inside">
                <label for="report_header_text"/>
                <field name="report_header_text"
                       placeholder="Add a description before table..." nolabel="1"
                       height="50"/>
            </xpath>
        </field>
    </record>
</odoo>
