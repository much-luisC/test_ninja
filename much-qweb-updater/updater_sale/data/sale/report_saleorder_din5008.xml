<?xml version="1.0"?>
<odoo>
  <template id="report_saleorder_much_custom_din5008" inherit_id="sale.report_saleorder">
    <xpath expr="/t" position="replace">
      <t t-name="sale.report_saleorder">
        <t t-call="web.html_container">
          <t t-foreach="docs" t-as="doc">
            <t t-set="report"
               t-value="doc.sudo().company_id.external_report_layout_id.name.split('_')[-1] if doc.sudo().company_id.external_report_layout_id and doc.sudo().company_id.external_report_layout_id.name.split('_')[-1] not in ['background', 'boxed', 'clean', 'standard', 'document', 'din5008'] else ''" />
            <t t-if="report != ''" t-call="updater_sale.report_saleorder_document_din5008_{{report}}" t-lang="doc.partner_id.lang" />
            <t t-else="" t-call="sale.report_saleorder_document" t-lang="doc.partner_id.lang" />
          </t>
        </t>
      </t>
    </xpath>
  </template>

  <template id="report_saleorder_pro_forma_much_custom_din5008" inherit_id="sale.report_saleorder_pro_forma">
    <xpath expr="/t" position="replace">
      <t t-name="sale.report_saleorder_pro_forma">
        <t t-call="web.html_container">
          <t t-set="is_pro_forma" t-value="True"/>
          <t t-set="docs" t-value="docs.with_context(proforma=True)"/>
          <t t-foreach="docs" t-as="doc">
            <t t-set="report"
               t-value="doc.sudo().company_id.external_report_layout_id.name.split('_')[-1] if doc.sudo().company_id.external_report_layout_id and doc.sudo().company_id.external_report_layout_id.name.split('_')[-1] not in ['background', 'boxed', 'clean', 'standard', 'document', 'din5008'] else ''" />
            <t t-if="report != ''" t-call="updater_sale.report_saleorder_document_din5008_{{report}}" t-lang="doc.partner_id.lang" />
            <t t-else="" t-call="sale.report_saleorder_document" t-lang="doc.partner_id.lang" />
          </t>
        </t>
      </t>
    </xpath>
  </template>

</odoo>