<?xml version="1.0"?>
<odoo>
    <record id="report_saleorder_document_din5008_much" model="ir.ui.view">
        <field name="name">report_saleorder_document_din5008_much</field>
        <field name="type">qweb</field>
        <field name="arch" type="xml">
            <t t-name="updater_sale.report_saleorder_document_din5008_much">
                <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)"/>
                <t t-call="web.external_layout">
                    <t t-set="font" t-value="doc.company_id.font or 'Lato'"/>
                    <t t-set="primary"
                       t-value="doc.company_id.primary_color or '#ea5747'"/>
                    <t t-set="secondary"
                       t-value="doc.company_id.secondary_color or '#ffffff'"/>

                    <style type="text/css">
                        .terms a{
                        color:<t t-esc="primary"/>!important;
                        }
                    </style>

                    <t t-set="address">
                        <address style="display:none;"/>
                    </t>

                    <div class="row" style="font-size: 12px;">
                        <div class="col-6 text-left" style="padding-top: 10px;">
                            <t t-if="doc.partner_id.parent_id">
                                <p class="text-left" style="margin:0;">
                                    <t t-esc="doc.partner_id.parent_id.name"/>
                                </p>
                            </t>
                            <p class="text-left" style="margin:0;">
                                <span t-field="doc.partner_id.name"/>
                            </p>
                            <p class="text-left" style="margin:0;">
                                <span t-field="doc.partner_id.street"/>
                            </p>
                            <p t-if="doc.partner_id.street2" class="text-left"
                               style="margin:0;">
                                <span t-field="doc.partner_id.street2"/>
                            </p>
                            <p class="text-left" style="margin:0;">
                                <span t-field="doc.partner_id.zip"/>
                                <span t-field="doc.partner_id.city"/>
                            </p>
                            <p t-if="doc.partner_id.country_id" class="text-left"
                               style="margin:0;">
                                <span t-field="doc.partner_id.country_id.name"/>
                            </p>
                            <p t-if="doc.partner_id.vat" class="text-left"
                               style="margin:0;">
                                VAT:
                                <span t-field="doc.partner_id.vat"/>
                            </p>
                        </div>
                        <div class="col-6 text-right">
                            <div class="row">
                                <div class="col-5">
                                    <p t-if="doc.name" class="text-left text-nowrap"
                                       style="margin:0;">Quotation No.
                                    </p>
                                    <p t-if="doc.date_order"
                                       class="text-left text-nowrap" style="margin:0;">
                                        Quotation Date
                                    </p>
                                    <p t-if="doc.commitment_date"
                                       class="text-left text-nowrap" style="margin:0;">
                                        Expiration
                                    </p>
                                    <p t-if="doc.client_order_ref" class="text-left"
                                       style="margin:0;">Customer Reference
                                    </p>
                                    <p t-if="doc.user_id.name" class="text-left"
                                       style="margin:0;">Salesperson
                                    </p>
                                </div>
                                <div class="col-7">
                                    <p t-if="doc.name" class="text-left"
                                       style="margin:0;">
                                        <span t-field="doc.name"/>
                                    </p>
                                    <p t-if="doc.date_order" class="text-left"
                                       style="margin:0;">
                                        <span t-esc="doc.date_order"
                                              t-options="{'widget': 'date'}"/>
                                    </p>
                                    <p t-if="doc.commitment_date" class="text-left"
                                       style="margin:0;">
                                        <span t-esc="doc.commitment_date"
                                              t-options="{'widget': 'date'}"/>
                                    </p>
                                    <p t-if="doc.client_order_ref" class="text-left"
                                       style="margin:0;">
                                        <span t-field="doc.client_order_ref"/>
                                    </p>
                                    <p t-if="doc.user_id.name" class="text-left"
                                       style="margin:0;">
                                        <span t-field="doc.user_id.name"/>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row" style="padding-top: 30px;font-size: 12px;"
                         t-if="doc.partner_shipping_id == doc.partner_invoice_id
                             and doc.partner_invoice_id != doc.partner_id
                             or doc.partner_shipping_id != doc.partner_invoice_id"
                         groups="sale.group_delivery_invoice_address">
                        <div class="col-6">
                            <div class="text-left">
                                <p class="text-left" style="margin:0;"
                                   t-if="doc.partner_shipping_id == doc.partner_invoice_id">
                                    <b>Invoicing and Shipping Address:</b>
                                </p>
                                <p class="text-left" style="margin:0;"
                                   t-if="doc.partner_shipping_id != doc.partner_invoice_id">
                                    <b>Shipping Address:</b>
                                </p>
                                <t t-if="doc.partner_shipping_id.parent_id">
                                    <p class="text-left" style="margin:0;">
                                        <t t-esc="doc.partner_shipping_id.parent_id.name"/>
                                    </p>
                                </t>
                                <t t-elif="doc.partner_shipping_id.company_name">
                                    <p class="text-left" style="margin:0;">
                                        <t t-esc="doc.partner_shipping_id.company_name"/>
                                    </p>
                                </t>
                                <p class="text-left" style="margin:0;">
                                    <t t-esc="doc.partner_shipping_id.name"/>
                                </p>
                                <p class="text-left" style="margin:0;">
                                    <t t-if="doc.partner_shipping_id.street"
                                       t-esc="doc.partner_shipping_id.street"/>
                                </p>
                                <p class="text-left" style="margin:0;">
                                    <t t-if="doc.partner_shipping_id.lang == 'en_US'">
                                        <t t-if="doc.partner_shipping_id.city"
                                           t-esc="doc.partner_shipping_id.city"/>
                                        <t t-if="doc.partner_shipping_id.zip"
                                           t-esc="doc.partner_shipping_id.zip"/>
                                    </t>
                                    <t t-else="">
                                        <t t-if="doc.partner_shipping_id.zip"
                                           t-esc="doc.partner_shipping_id.zip"/>
                                        <t t-if="doc.partner_shipping_id.city"
                                           t-esc="doc.partner_shipping_id.city"/>
                                    </t>
                                </p>
                                <p class="text-left" style="margin:0;">
                                    <t t-if="doc.partner_shipping_id.country_id"
                                       t-esc="doc.partner_shipping_id.country_id.name"/>
                                </p>
                            </div>
                        </div>
                        <div class="col-6"
                             t-if="doc.partner_shipping_id != doc.partner_invoice_id">
                            <div class="text-left">
                                <p class="text-left" style="margin:0;">
                                    <b>Invoicing Address:</b>
                                </p>
                                <t t-if="doc.partner_invoice_id.parent_id">
                                    <p class="text-left" style="margin:0;">
                                        <t t-esc="doc.partner_invoice_id.parent_id.name"/>
                                    </p>
                                </t>
                                <t t-elif="doc.partner_invoice_id.company_name">
                                    <p class="text-left" style="margin:0;">
                                        <t t-esc="doc.partner_invoice_id.company_name"/>
                                    </p>
                                </t>
                                <p class="text-left" style="margin:0;">
                                    <t t-esc="doc.partner_invoice_id.name"/>
                                </p>
                                <p class="text-left" style="margin:0;">
                                    <t t-if="doc.partner_invoice_id.street"
                                       t-esc="doc.partner_invoice_id.street"/>
                                </p>
                                <p class="text-left" style="margin:0;">
                                    <t t-if="doc.partner_id.lang == 'en_US'">
                                        <t t-if="doc.partner_invoice_id.city"
                                           t-esc="doc.partner_invoice_id.city"/>
                                        <t t-if="doc.partner_invoice_id.zip"
                                           t-esc="doc.partner_invoice_id.zip"/>
                                    </t>
                                    <t t-else="">
                                        <t t-if="doc.partner_invoice_id.zip"
                                           t-esc="doc.partner_invoice_id.zip"/>
                                        <t t-if="doc.partner_invoice_id.city"
                                           t-esc="doc.partner_invoice_id.city"/>
                                    </t>
                                </p>
                                <p class="text-left" style="margin:0;">
                                    <t t-if="doc.partner_invoice_id.country_id"
                                       t-esc="doc.partner_invoice_id.country_id.name"/>
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="page" style="margin-top: 30px; font-size: 12px;">
                        <div class="oe_structure"/>
                        <h5 style="font-weight: bold;">
                            <t t-if="not (env.context.get('proforma', False) or is_pro_forma)">
                                <span t-if="doc.state not in ['draft','sent']">Order
                                </span>
                                <span t-if="doc.state in ['draft','sent']">Quotation
                                </span>
                            </t>
                            <t t-if="env.context.get('proforma', False) or is_pro_forma">
                                <span>Pro-Forma Invoice</span>
                            </t>
                            <span t-field="doc.name"/>
                            <t t-if="doc.order_title">
                                -
                                <span t-field="doc.order_title"/>
                            </t>
                        </h5>
                        <span t-field="doc.report_header_text"/>
                        <t t-set="display_discount"
                           t-value="any([l.discount for l in doc.order_line])"/>
                        <table class="table table-sm o_main_table"
                               style="margin-top:30px; margin-bottom: 0.3em !important;">
                            <thead t-att-style="(doc.company_id.much_layout_style == 'colorful') and 'color: %s; background-color: %s;' % (secondary ,primary) or 'color: #535353;'">
                                <tr>
                                    <th name="th_position" class="text-left py-2"
                                        style="border-top:none !important; border-bottom:none !important;">
                                        Pos
                                    </th>
                                    <th name="th_description" class="text-left py-2"
                                        style="border-top:none !important; border-bottom:none !important;">
                                        <span>Description</span>
                                    </th>
                                    <th name="th_quantity" class="text-right py-2"
                                        style="border-top:none !important; border-bottom:none !important;">
                                        <span>Quantity</span>
                                    </th>
                                    <th name="th_priceunit"
                                        t-attf-class="text-right py-2 {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"
                                        style="border-top:none !important; border-bottom:none !important;">
                                        <span>Unit Price</span>
                                    </th>
                                    <th name="th_price_unit" t-if="display_discount"
                                        t-attf-class="text-right py-2 {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"
                                        style="border-top:none !important; border-bottom:none !important;"
                                        groups="product.group_discount_per_so_line">
                                        <span>Disc. %</span>
                                    </th>
                                    <th name="th_taxes"
                                        t-attf-class="text-center py-2 {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"
                                        style="border-top:none !important; border-bottom:none !important;">
                                        <span>Taxes</span>
                                    </th>
                                    <th name="th_subtotal" class="text-right py-2"
                                        style="border-top:none !important; border-bottom:none !important;">
                                        <span>Amount</span>
                                    </th>
                                </tr>
                            </thead>
                            <tbody class="sale_tbody">
                                <t t-set="current_subtotal" t-value="0"/>
                                <t t-set="count" t-value="1"/>

                                <t t-foreach="doc.order_line" t-as="line">
                                    <t t-set="current_subtotal"
                                       t-value="current_subtotal + line.price_subtotal"
                                       groups="account.group_show_line_subtotals_tax_excluded"/>
                                    <t t-set="current_subtotal"
                                       t-value="current_subtotal + line.price_total"
                                       groups="account.group_show_line_subtotals_tax_included"/>

                                    <tr t-att-style="'border-top: 1px solid #000000 !important; border-bottom: 1px solid #000000 !important;' if line.display_type in ['line_section'] and doc.company_id.much_layout_style == 'bw' else 'background-color: #e9ecef;' if line.display_type in ['line_section'] and doc.company_id.much_layout_style in ['colorful','slick'] else ''"
                                        t-att-class="'font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                        <t t-if="not line.display_type">
                                            <td name="td_pos" class="text-left py-2"
                                                style="border:none !important;">
                                                <span t-esc="count"/>
                                            </td>
                                            <td name="td_description"
                                                class="text-left py-2"
                                                style="border:none !important;">
                                                <span t-field="line.name"
                                                      t-options="{'widget': 'text'}"/>
                                            </td>
                                            <td name="td_quantity"
                                                class="text-right py-2"
                                                style="border:none !important;">
                                                <span t-field="line.product_uom_qty"
                                                      t-options="{&quot;widget&quot;: &quot;number&quot;}"/>
                                                <span t-field="line.product_uom"/>
                                            </td>
                                            <td name="td_priceunit"
                                                t-attf-class="text-right py-2 {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"
                                                style="border:none !important;">
                                                <span t-field="line.price_unit"
                                                      t-options="{&quot;widget&quot;: &quot;monetary&quot;}"/>
                                            </td>
                                            <td t-if="display_discount"
                                                t-attf-class="text-right py-2 {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"
                                                style="border:none !important;"
                                                groups="product.group_discount_per_so_line">
                                                <span t-field="line.discount"/>
                                            </td>
                                            <td name="td_taxes"
                                                t-attf-class="text-center py-2 {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"
                                                style="border:none !important;">
                                                <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_id))"/>
                                            </td>
                                            <td name="td_subtotal"
                                                class="text-right o_price_total py-2  {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"
                                                style="border:none !important;">
                                                <span t-field="line.price_subtotal"
                                                      groups="account.group_show_line_subtotals_tax_excluded"/>
                                                <span t-field="line.price_total"
                                                      groups="account.group_show_line_subtotals_tax_included"/>
                                            </td>
                                        </t>
                                        <t t-if="line.display_type == 'line_section'">
                                            <td name="td_section_line" colspan="99"
                                                class="py-2"
                                                style="border: none !important;">
                                                <span t-field="line.name"
                                                      t-options="{'widget': 'text'}"/>
                                            </td>
                                            <t t-set="current_section" t-value="line"/>
                                            <t t-set="current_subtotal" t-value="0"/>
                                        </t>
                                        <t t-if="line.display_type == 'line_note'">
                                            <td name="td_pos" class="text-left py-2"
                                                style="border:none !important;">
                                                <span>&#160;</span>
                                            </td>
                                            <td name="td_note_line" colspan="99"
                                                class="py-2"
                                                style="border: none !important;">
                                                <span t-field="line.name"
                                                      t-options="{'widget': 'text'}"/>
                                            </td>
                                        </t>
                                        <t t-if="line.display_type not in ['line_section', 'line_note']"
                                           t-set="count" t-value="count+1"/>
                                    </tr>

                                    <t t-if="current_section and (line_last or doc.order_line[line_index+1].display_type == 'line_section')">
                                        <tr class="is-subtotal text-right">
                                            <td name="td_section_subtotal" colspan="99"
                                                class="py-1"
                                                style="border: none !important;">
                                                <strong class="mr16">Subtotal</strong>
                                                <span t-esc="current_subtotal"
                                                      t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.pricelist_id.currency_id}"/>
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                            </tbody>
                        </table>

                        <div class="clearfix" name="so_total_summary">
                            <div id="total" class="row" name="total">
                                <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto">
                                    <table class="table table-sm">
                                        <!-- Tax totals -->
                                        <t t-set="tax_totals"
                                           t-value="json.loads(doc.tax_totals_json)"/>
                                        <tr class="o_subtotal"
                                            t-att-style="'border-top:1px solid #e9ecef !important;' if doc.company_id.much_layout_style in ['colorful','slick'] else 'border-top:1px solid #000000 !important;'">
                                            <td name="td_amount_untaxed_label"
                                                class="py-2"
                                                style="border:none !important;">
                                                <strong>Untaxed Amount</strong>
                                            </td>
                                            <td name="td_amount_untaxed"
                                                class="text-right py-2"
                                                style="border:none !important;">
                                                <span t-field="doc.amount_untaxed"/>
                                            </td>
                                        </tr>
                                        <t t-foreach="tax_totals['subtotals']"
                                           t-as="subtotal">
                                            <t t-set="subtotal_to_show"
                                               t-value="subtotal['name']"/>
                                            <t t-foreach="tax_totals['groups_by_subtotal'][subtotal_to_show]"
                                               t-as="amount_by_group">
                                                <tr style="margin: 0;">
                                                    <t t-if="len(tax_totals['groups_by_subtotal'][subtotal_to_show]) > 1">
                                                        <td name="td_amount_by_group_label"
                                                            class="py-2"
                                                            style="border:none !important;">
                                                            <span>
                                                                <span t-esc="amount_by_group['tax_group_name']"/>
                                                            </span>
                                                        </td>
                                                        <td name="td_amount_by_group"
                                                            class="text-right o_price_total py-2"
                                                            style="border:none !important;">
                                                            <span t-esc="amount_by_group['formatted_tax_group_amount']"/>
                                                        </td>
                                                    </t>
                                                    <t t-else="">
                                                        <td name="td_amount_by_group_label_3"
                                                            class="py-2"
                                                            style="border:none !important;">
                                                            <span>
                                                                <span t-esc="amount_by_group['tax_group_name']"/>
                                                            </span>
                                                        </td>
                                                        <td name="td_amount_by_group_3"
                                                            style="border:none !important;"
                                                            class="text-right o_price_total py-2">
                                                            <span t-esc="amount_by_group['formatted_tax_group_amount']"/>
                                                        </td>
                                                    </t>
                                                </tr>
                                            </t>
                                        </t>
                                        <tr class="o_total"
                                            t-att-style="'border-top:1px solid #e9ecef !important;' if doc.company_id.much_layout_style in ['colorful','slick'] else 'border-top:2px solid #000000 !important;'">
                                            <td name="td_amount_total_label"
                                                class="py-2"
                                                style="border: none !important;">
                                                <span>
                                                    <strong>Total</strong>
                                                </span>
                                            </td>
                                            <td name="td_amount_total"
                                                class="text-right py-2"
                                                style="border: none !important;">
                                                <span t-field="doc.amount_total"/>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>

                        <div t-if="doc.signature" class="mt32 ml64 mr4"
                             name="signature">
                            <div class="offset-8">
                                <strong>Signature</strong>
                            </div>
                            <div class="offset-8">
                                <img t-att-src="image_data_uri(doc.signature)"
                                     style="max-height: 4cm; max-width: 8cm;"/>
                            </div>
                            <div class="offset-8 text-center">
                                <p t-field="doc.signed_by"/>
                            </div>
                        </div>

                        <div class="oe_structure mt-3"/>

                        <span class="terms" t-field="doc.note"/>
                        <div>
                            <p t-if="doc.validity_date">
                                The offer is valid until:
                                <t t-esc="doc.validity_date"
                                   t-options="{'widget': 'date'}"/>
                            </p>
                            <p t-if="doc.payment_term_id">
                                Payment in
                                <t t-esc="doc.payment_term_id.name"/>
                            </p>
                        </div>

                        <p id="fiscal_position_remark"
                           t-if="doc.fiscal_position_id and doc.fiscal_position_id.sudo().note">
                            <strong>Fiscal Position Remark:</strong>
                            <span t-field="doc.fiscal_position_id.sudo().note"/>
                        </p>
                    </div>
                </t>
            </t>
        </field>
    </record>
</odoo>