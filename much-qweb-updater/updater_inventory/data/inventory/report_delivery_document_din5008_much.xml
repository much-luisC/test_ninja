<?xml version="1.0"?>
<odoo>
    <record id="report_delivery_document_din5008_much" model="ir.ui.view">
        <field name="name">report_delivery_document_din5008_much</field>
        <field name="type">qweb</field>
        <field name="arch" type="xml">
            <t t-name="updater_inventory.report_delivery_document_din5008_much">
                <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)"/>
                <t t-set="partner"
                   t-value="o.partner_id or (o.move_lines and o.move_lines[0].partner_id) or False"/>
                <t t-call="web.external_layout">
                    <t t-set="font" t-value="o.company_id.font or 'Lato'"/>
                    <t t-set="primary"
                       t-value="o.company_id.primary_color or '#ea5747'"/>
                    <t t-set="secondary"
                       t-value="o.company_id.secondary_color or '#ffffff'"/>

                    <style type="text/css">
                        .terms a{
                        color:<t t-esc="primary"/>!important;
                        }
                    </style>
                    <t t-set="address">
                        <address style="display:none;"/>
                    </t>
                    <div class="row" style="padding-top: 30px;font-size: 12px;">
                        <div class="col-6" name="div_incoming_address">
                            <div class="text-left">
                                <p class="text-left" style="margin:0;">
                                    <div t-if="o.picking_type_id.code=='incoming' and partner">
                                        <span>
                                            <strong>Vendor Address:</strong>
                                        </span>
                                    </div>
                                    <div t-if="o.picking_type_id.code=='internal' and partner">
                                        <span>
                                            <strong>Warehouse Address:</strong>
                                        </span>
                                    </div>
                                    <div t-if="o.picking_type_id.code=='outgoing' and partner">
                                        <span>
                                            <strong>Customer Address:</strong>
                                        </span>
                                    </div>
                                </p>
                                <t t-if="partner">
                                    <p class="text-left" style="margin:0;">
                                        <t t-esc="partner.commercial_partner_id.name"/>
                                    </p>
                                    <p class="text-left" style="margin:0;">
                                        <t t-if="partner.commercial_partner_id.street"
                                           t-esc="partner.commercial_partner_id.street"/>
                                    </p>
                                    <p class="text-left" style="margin:0;">
                                        <t t-if="partner.commercial_partner_id.zip"
                                           t-esc="partner.commercial_partner_id.zip"/>
                                        <t t-if="partner.commercial_partner_id.city"
                                           t-esc="partner.commercial_partner_id.city"/>
                                    </p>
                                    <p class="text-left" style="margin:0;">
                                        <t t-if="partner.commercial_partner_id.country_id"
                                           t-esc="partner.commercial_partner_id.country_id.name"/>
                                    </p>
                                </t>
                            </div>
                        </div>
                        <div class="col-6" name="div_outgoing_address">
                            <div class="text-left">
                                <div t-if="o.move_ids_without_package and o.move_ids_without_package[0].partner_id">
                                    <p class="text-left" style="margin:0;">
                                        <b>Delivery Address:</b>
                                    </p>
                                    <p class="text-left" style="margin:0;">
                                        <t t-if="o.move_ids_without_package[0].partner_id.parent_id">
                                            <t t-esc="o.move_ids_without_package[0].partner_id.parent_id.name"/>,
                                        </t>
                                        <t t-esc="o.move_ids_without_package[0].partner_id.name"/>
                                    </p>
                                    <p class="text-left" style="margin:0;">
                                        <t t-if="o.move_ids_without_package[0].partner_id.street"
                                           t-esc="o.move_ids_without_package[0].partner_id.street"/>
                                    </p>
                                    <p class="text-left" style="margin:0;">
                                        <t t-if="o.move_ids_without_package[0].partner_id.zip"
                                           t-esc="o.move_ids_without_package[0].partner_id.zip"/>
                                        <t t-if="o.move_ids_without_package[0].partner_id.city"
                                           t-esc="o.move_ids_without_package[0].partner_id.city"/>
                                    </p>
                                    <p class="text-left" style="margin:0;">
                                        <t t-if="o.move_ids_without_package[0].partner_id.country_id"
                                           t-esc="o.move_ids_without_package[0].partner_id.country_id.name"/>
                                    </p>
                                </div>
                                <div t-if="o.picking_type_id.code != 'internal' and (not o.move_ids_without_package or not o.move_ids_without_package[0].partner_id) and o.picking_type_id.warehouse_id.partner_id">
                                    <p class="text-left" style="margin:0;">
                                        <b>Warehouse Address:</b>
                                    </p>
                                    <p class="text-left" style="margin:0;">
                                        <t t-esc="o.picking_type_id.warehouse_id.partner_id.name"/>
                                    </p>
                                    <p class="text-left" style="margin:0;">
                                        <t t-if="o.picking_type_id.warehouse_id.partner_id.street"
                                           t-esc="o.picking_type_id.warehouse_id.partner_id.street"/>
                                    </p>
                                    <p class="text-left" style="margin:0;">
                                        <t t-if="o.picking_type_id.warehouse_id.partner_id.zip"
                                           t-esc="o.picking_type_id.warehouse_id.partner_id.zip"/>
                                        <t t-if="o.picking_type_id.warehouse_id.partner_id.city"
                                           t-esc="o.picking_type_id.warehouse_id.partner_id.city"/>
                                    </p>
                                    <p class="text-left" style="margin:0;">
                                        <t t-if="o.picking_type_id.warehouse_id.partner_id.country_id"
                                           t-esc="o.picking_type_id.warehouse_id.partner_id.country_id.name"/>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="page" style="margin-top: 30px; font-size: 12px;">
                        <div class="oe_structure"/>
                        <h5 style="font-weight: bold;">
                            <span t-field="o.name"/>
                        </h5>
                        <div class="row mt32 mb32">
                            <div t-if="o.origin" class="col-auto" name="div_origin">
                                <strong>Order:</strong>
                                <p t-field="o.origin"/>
                            </div>
                            <div t-if="o.state" class="col-auto" name="div_sched_date">
                                <strong>Shipping Date:</strong>
                                <t t-if="o.state == 'done'">
                                    <p t-field="o.date_done" t-options="{'widget': 'datetime'}"/>
                                </t>
                                <t t-if="o.state != 'done'">
                                    <p t-field="o.scheduled_date" t-options="{'widget': 'datetime'}"/>
                                </t>
                            </div>
                        </div>
                        <table class="table table-sm o_main_table"
                               style="margin-top:20px; margin-bottom: 0.3em !important;"
                               t-if="o.state!='done'" name="stock_move_table">
                            <thead t-att-style="(o.company_id.much_layout_style == 'colorful') and 'color: %s; background-color: %s;' % (secondary ,primary) or 'color: #535353;'">
                                <tr>
                                    <th name="th_position" class="text-left py-2"
                                        style="border-top:none !important; border-bottom:none !important;">
                                        Pos
                                    </th>
                                    <th name="th_sm_product" class="text-left py-2"
                                        style="border-top:none !important; border-bottom:none !important;">
                                        <span>Product</span>
                                    </th>
                                    <th name="th_sm_ordered" class="text-right py-2"
                                        style="border-top:none !important; border-bottom:none !important;">
                                        <span>Ordered</span>
                                    </th>
                                    <th name="th_sm_quantity" class="text-right py-2"
                                        style="border-top:none !important; border-bottom:none !important;">
                                        <span>Delivered</span>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="lines"
                                   t-value="o.move_lines.filtered(lambda x: x.product_uom_qty)"/>
                                <t t-set="count" t-value="1"/>
                                <tr t-foreach="lines" t-as="move">
                                    <td name="td_pos" class="text-left py-2"
                                        style="border:none !important;">
                                        <span t-esc="count"/>
                                    </td>
                                    <td name="td_product"
                                        class="text-left py-2"
                                        style="border:none !important;">
                                        <span t-field="move.product_id"/>
                                        <p t-if="move.description_picking != move.product_id.name and move.description_picking != move.product_id.display_name">
                                            <span t-field="move.description_picking"/>
                                        </p>
                                    </td>
                                    <td name="td_ordered"
                                        class="text-right py-2"
                                        style="border:none !important;">
                                        <span t-field="move.product_uom_qty"
                                              t-options="{&quot;widget&quot;: &quot;number&quot;}"/>
                                        <span t-field="move.product_uom"/>
                                    </td>
                                    <td name="td_quantity"
                                        class="text-right py-2"
                                        style="border:none !important;">
                                        <span t-field="move.quantity_done"/>
                                        <span t-field="move.product_uom"/>
                                    </td>
                                    <t t-set="count" t-value="count+1"/>
                                </tr>
                            </tbody>
                        </table>
                        <table class="table table-sm mt48"
                               style="margin-top:20px; margin-bottom: 0.3em !important;"
                               t-if="o.move_line_ids and o.state=='done'"
                               name="stock_move_line_table">
                            <t t-set="has_serial_number" t-value="False"/>
                            <t t-set="has_serial_number"
                               t-value="o.move_line_ids.mapped('lot_id')"
                               groups="stock.group_lot_on_delivery_slip"/>
                            <thead t-att-style="(o.company_id.much_layout_style == 'colorful') and 'color: %s; background-color: %s;' % (secondary ,primary) or 'color: #535353;'">
                                <tr>
                                    <th name="th_position" class="text-left py-2"
                                        style="border-top:none !important; border-bottom:none !important;">
                                        Pos
                                    </th>
                                    <th name="th_sml_product" class="text-left py-2"
                                        style="border-top:none !important; border-bottom:none !important;">
                                        <span>Product</span>
                                    </th>

                                    <t name="lot_serial" t-if="has_serial_number">
                                        <th class="text-left py-2"
                                            style="border-top:none !important; border-bottom:none !important;">
                                            Lot/Serial Number
                                        </th>
                                    </t>
                                    <th name="th_sml_qty_ordered"
                                        class="text-right py-2"
                                        style="border-top:none !important; border-bottom:none !important;"
                                        t-if="not has_serial_number">
                                        <strong>Ordered</strong>
                                    </th>
                                    <th name="th_sml_quantity"
                                        class="text-right py-2"
                                        style="border-top:none !important; border-bottom:none !important;">
                                        <strong>Delivered</strong>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- This part gets complicated with different use cases (additional use cases in extensions of this report):
                                        1. If serial numbers are used and set to print on delivery slip => print lines as is, otherwise group them by overlapping
                                            product + description + uom combinations
                                        2. If any packages are assigned => split products up by package (or non-package) and then apply use case 1 -->
                                <!-- If has destination packages => create sections of corresponding products -->
                                <t t-if="o.has_packages" name="has_packages">
                                    <t t-set="packages"
                                       t-value="o.move_line_ids.mapped('result_package_id')"/>
                                    <t t-foreach="packages" t-as="package">
                                        <t t-call="stock.stock_report_delivery_package_section_line"/>
                                        <t t-set="package_move_lines"
                                           t-value="o.move_line_ids.filtered(lambda l: l.result_package_id == package)"/>
                                        <!-- If printing lots/serial numbers => keep products in original lines -->
                                        <t t-if="has_serial_number">
                                            <t t-set="count" t-value="1"/>
                                            <tr t-foreach="package_move_lines"
                                                t-as="move_line">
                                                <t t-call="updater_inventory.stock_report_delivery_has_serial_move_line_custom"/>
                                                <t t-set="count" t-value="count+1"/>
                                            </tr>
                                        </t>
                                        <!-- If not printing lots/serial numbers => merge lines with same product+description+uom -->
                                        <t t-else="">
                                            <t t-set="aggregated_lines"
                                               t-value="package_move_lines._get_aggregated_product_quantities(strict=True)"/>
                                            <t t-call="updater_inventory.stock_report_delivery_aggregated_move_lines_custom"/>
                                        </t>
                                    </t>
                                    <!-- Make sure we do another section for package-less products if they exist -->
                                    <t t-set="move_lines"
                                       t-value="o.move_line_ids.filtered(lambda l: not l.result_package_id)"/>
                                    <t t-set="aggregated_lines"
                                       t-value="o.move_line_ids._get_aggregated_product_quantities(except_package=True)"/>
                                    <t t-if="move_lines or aggregated_lines"
                                       name="no_package_move_lines">
                                        <t t-call="stock.stock_report_delivery_no_package_section_line"
                                           name="no_package_section"/>
                                        <t t-if="has_serial_number">
                                            <t t-set="count" t-value="1"/>
                                            <tr t-foreach="move_lines" t-as="move_line">
                                                <t t-call="updater_inventory.stock_report_delivery_has_serial_move_line_custom"/>
                                                <t t-set="count" t-value="count+1"/>
                                            </tr>
                                        </t>
                                        <t t-elif="aggregated_lines">
                                            <t t-call="updater_inventory.stock_report_delivery_aggregated_move_lines_custom"/>
                                        </t>
                                    </t>
                                </t>
                                <!-- No destination packages -->
                                <t t-else="">
                                    <!-- If printing lots/serial numbers => keep products in original lines -->
                                    <t t-if="has_serial_number">
                                        <t t-set="count" t-value="1"/>
                                        <tr t-foreach="o.move_line_ids"
                                            t-as="move_line">
                                            <t t-call="updater_inventory.stock_report_delivery_has_serial_move_line_custom"/>
                                            <t t-set="count" t-value="count+1"/>
                                        </tr>
                                    </t>
                                    <!-- If not printing lots/serial numbers => merge lines with same product -->
                                    <t t-else="" name="aggregated_move_lines">
                                        <t t-set="aggregated_lines"
                                           t-value="o.move_line_ids._get_aggregated_product_quantities()"/>
                                        <t t-call="updater_inventory.stock_report_delivery_aggregated_move_lines_custom"/>
                                    </t>
                                </t>
                            </tbody>
                        </table>
                        <t t-set="backorders"
                           t-value="o.backorder_ids.filtered(lambda x: x.state not in ('done', 'cancel'))"/>
                        <t t-if="o.backorder_ids and backorders">
                            <p class="mt-5">
                                <span>Remaining quantities not yet delivered:</span>
                            </p>
                            <table class="table table-sm" name="stock_backorder_table"
                                   style="margin-top:20px; margin-bottom: 0.3em !important;">
                                <thead t-att-style="(o.company_id.much_layout_style == 'colorful') and 'color: %s; background-color: %s;' % (secondary ,primary) or 'color: #535353;'">
                                    <tr>
                                        <th name="th_position" class="text-left py-2"
                                            style="border-top:none !important; border-bottom:none !important;">
                                            Pos
                                        </th>
                                        <th name="th_sb_product" class="text-left py-2"
                                            style="border-top:none !important; border-bottom:none !important;">
                                            <strong>Product</strong>
                                        </th>
<!--                                        <th style="border-top:none !important; border-bottom:none !important;"/>-->
                                        <th name="th_sb_quantity"
                                            class="text-right py-2"
                                            style="border-top:none !important; border-bottom:none !important;">
                                            <strong>Quantity</strong>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="backorders" t-as="backorder">
                                        <t t-set="bo_lines"
                                           t-value="backorder.move_lines.filtered(lambda x: x.product_uom_qty)"/>
                                        <t t-set="count" t-value="1"/>
                                        <tr t-foreach="bo_lines" t-as="bo_line">
                                            <td name="td_pos" class="text-left py-2"
                                                style="border:none !important;">
                                                <span t-esc="count"/>
                                            </td>
                                            <td class="text-left py-2"
                                                style="border:none !important;">
                                                <span t-field="bo_line.product_id"/>
                                                <p t-if="bo_line.description_picking != bo_line.product_id.name and bo_line.description_picking != bo_line.product_id.display_name">
                                                    <span t-field="bo_line.description_picking"/>
                                                </p>
                                            </td>
                                            <td class="text-right py-2"
                                                style="border:none !important;">
                                                <span t-field="bo_line.product_uom_qty"/>
                                                <span t-field="bo_line.product_uom"/>
                                            </td>
                                            <t t-set="count" t-value="count+1"/>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </t>

                        <div t-if="o.signature" class="mt32 ml64 mr4" name="signature">
                            <div class="offset-8">
                                <strong>Signature</strong>
                            </div>
                            <div class="offset-8">
                                <img t-att-src="image_data_uri(o.signature)"
                                     style="max-height: 4cm; max-width: 8cm;"/>
                            </div>
                            <div class="offset-8 text-center">
                                <p t-field="o.partner_id.name"/>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </field>
    </record>

    <template id="stock_report_delivery_has_serial_move_line_custom">
        <td name="td_pos" class="text-left py-2"
            style="border:none !important;">
            <span t-esc="count"/>
        </td>
        <td class="text-left py-2" style="border:none !important;">
            <span t-field="move_line.product_id"/>
            <t t-if="not description and description != ''">
                <t t-set="description" t-value="move_line.move_id.description_picking"/>
            </t>
            <p t-if="description !='' and description != move_line.product_id.name">
                <span t-esc="description"/>
            </p>
        </td>
        <t t-if="has_serial_number" name="move_line_lot">
            <td class="text-left py-2" style="border:none !important;">
                <span t-field="move_line.lot_id.name"/>
            </td>
        </t>
        <td class="text-right py-2" style="border:none !important;"
            name="move_line_lot_qty_done">
            <span t-field="move_line.qty_done"/>
            <span t-field="move_line.product_uom_id"/>
        </td>
    </template>

    <template id="stock_report_delivery_aggregated_move_lines_custom">
        <t t-set="count" t-value="1"/>
        <tr t-foreach="aggregated_lines" t-as="line">
            <td name="td_pos" class="text-left py-2"
                style="border:none !important;">
                <span t-esc="count"/>
            </td>
            <td class="text-left py-2"
                style="border:none !important;">
                <span t-esc="aggregated_lines[line]['name']"/>
                <p t-if="aggregated_lines[line]['description']">
                    <span t-esc="aggregated_lines[line]['description']"/>
                </p>
            </td>
            <td class="text-right py-2"
                style="border:none !important;" name="move_line_aggregated_qty_ordered">
                <span t-esc="aggregated_lines[line]['qty_ordered']"
                      t-options="{'widget': 'float', 'decimal_precision': 'Product Unit of Measure'}"/>
                <span t-esc="aggregated_lines[line]['product_uom']"/>
            </td>
            <td class="text-right py-2"
                style="border:none !important;" name="move_line_aggregated_qty_done">
                <t t-if="aggregated_lines[line]['qty_done']">
                    <span t-esc="aggregated_lines[line]['qty_done']"
                          t-options="{'widget': 'float', 'decimal_precision': 'Product Unit of Measure'}"/>
                    <span t-esc="aggregated_lines[line]['product_uom']"/>
                </t>
            </td>
            <t t-set="count" t-value="count+1"/>
        </tr>
    </template>

</odoo>