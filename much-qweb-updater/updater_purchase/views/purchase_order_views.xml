<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_purchase_order_form_much_din5008" model="ir.ui.view">
        <field name="name">purchase.order.form.much.din5008</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="before">
                <field name="order_title"/>
            </xpath>
            <xpath expr="//page[@name='purchase_delivery_invoice']" position="inside">
                <label for="report_header_text"/>
                <field name="report_header_text"
                       placeholder="Add a description before table..." nolabel="1"
                       height="50"/>
            </xpath>
        </field>
    </record>
</odoo>
