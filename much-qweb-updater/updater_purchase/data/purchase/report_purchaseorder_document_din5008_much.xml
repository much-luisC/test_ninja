<?xml version="1.0"?>
<odoo>
    <record id="report_purchaseorder_document_din5008_much" model="ir.ui.view">
        <field name="name">report_purchaseorder_document_din5008_much</field>
        <field name="type">qweb</field>
        <field name="arch" type="xml">
            <t t-name="updater.report_purchaseorder_document_din5008_much">
                <t t-call="web.external_layout">
                    <t t-set="font" t-value="o.company_id.font or 'Lato'"/>
                    <t t-set="primary"
                       t-value="o.company_id.primary_color or '#ea5747'"/>
                    <t t-set="secondary"
                       t-value="o.company_id.secondary_color or '#ffffff'"/>

                    <style type="text/css">
                        .terms a{
                        color:<t t-esc="primary"/>!important;
                        }
                    </style>
                    <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)"/>
                    <t t-set="address">
                        <address style="display:none;"/>
                    </t>

                    <div class="row" style="font-size: 12px;">
                        <div class="col-6 text-left" style="padding-top: 10px;">
                            <t t-if="o.partner_id.parent_id">
                                <p class="text-left" style="margin:0;">
                                    <t t-esc="o.partner_id.parent_id.name"/>
                                </p>
                            </t>
                            <p class="text-left" style="margin:0;">
                                <span t-field="o.partner_id.name"/>
                            </p>
                            <p class="text-left" style="margin:0;">
                                <span t-field="o.partner_id.street"/>
                            </p>
                            <p t-if="o.partner_id.street2" class="text-left"
                               style="margin:0;">
                                <span t-field="o.partner_id.street2"/>
                            </p>
                            <p class="text-left" style="margin:0;">
                                <span t-field="o.partner_id.zip"/>
                                <span t-field="o.partner_id.city"/>
                            </p>
                            <p t-if="o.partner_id.country_id" class="text-left"
                               style="margin:0;">
                                <span t-field="o.partner_id.country_id.name"/>
                            </p>
                            <p t-if="o.partner_id.phone" class="text-left"
                               style="margin:0;">
                                <i class="fa fa-phone"></i>&#160;
                                <span t-field="o.partner_id.phone"/>
                            </p>
                            <p t-if="o.partner_id.vat" class="text-left"
                               style="margin:0;">
                                VAT:
                                <span t-field="o.partner_id.vat"/>
                            </p>
                        </div>
                        <div class="col-6 text-right">
                            <div class="row">
                                <div class="col-6">
                                    <p t-if="o.name" class="text-left text-nowrap"
                                       style="margin:0;">
                                        Purchase Order No.
                                    </p>
                                </div>
                                <div class="col-6">
                                    <p t-if="o.name" class="text-left"
                                       style="margin:0;">
                                        <span t-field="o.name"/>
                                    </p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <p t-if="o.user_id.name" class="text-left"
                                       style="margin:0;">
                                        Purchase Representative
                                    </p>
                                </div>
                                <div class="col-6">
                                    <p t-if="o.user_id.name" class="text-left"
                                       style="margin:0;">
                                        <span t-field="o.user_id.name"/>
                                    </p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <p t-if="o.partner_ref" class="text-left"
                                       style="margin:0;">
                                        Order Reference
                                    </p>
                                </div>
                                <div class="col-6">
                                    <p t-if="o.partner_ref" class="text-left"
                                       style="margin:0;">
                                        <span t-field="o.partner_ref"/>
                                    </p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <p t-if="o.date_order" class="text-left text-nowrap"
                                       style="margin:0;">
                                        Order Date
                                    </p>
                                </div>
                                <div class="col-6">
                                    <p t-if="o.date_order" class="text-left"
                                       style="margin:0;">
                                        <span t-esc="o.date_order" t-options="{'widget': 'date'}"/>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row" style="padding-top: 30px;font-size: 12px;">
                        <div class="col-6" t-if="o.dest_address_id">
                            <div class="text-left">
                                <p class="text-left" style="margin:0;">
                                    <b>Shipping Address:</b>
                                </p>
                                <t t-if="o.dest_address_id.parent_id">
                                    <p class="text-left" style="margin:0;">
                                        <t t-esc="o.partner_id.parent_id.name"/>
                                    </p>
                                </t>
                                <t t-elif="o.dest_address_id.company_name">
                                    <p class="text-left" style="margin:0;">
                                        <t t-esc="o.partner_id.company_name"/>
                                    </p>
                                </t>
                                <p class="text-left" style="margin:0;">
                                    <t t-esc="o.dest_address_id.name"/>
                                </p>
                                <p class="text-left" style="margin:0;">
                                    <t t-if="o.dest_address_id.street"
                                       t-esc="o.dest_address_id.street"/>
                                </p>
                                <p class="text-left" style="margin:0;">
                                    <t t-if="o.dest_address_id.zip"
                                       t-esc="o.dest_address_id.zip"/>
                                    <t t-if="o.dest_address_id.city"
                                       t-esc="o.dest_address_id.city"/>
                                </p>
                                <p class="text-left" style="margin:0;">
                                    <t t-if="o.dest_address_id.country_id"
                                       t-esc="o.dest_address_id.country_id.display_name"/>
                                </p>
                                <p t-if="o.dest_address_id.phone" class="text-left"
                                   style="margin:0;">
                                    <span t-field="o.dest_address_id.phone"/>
                                </p>
                            </div>
                        </div>

                    </div>
                    <div class="page" style="margin-top: 30px; font-size: 12px;">
                        <div class="oe_structure"/>

                        <h5 style="font-weight: bold;">
                            <span t-if="o.state == 'draft'">Request for Quotation</span>
                            <span t-if="o.state in ['sent', 'to approve']">
                                Purchase Order
                            </span>
                            <span t-if="o.state in ['purchase', 'done']">
                                Purchase Order
                            </span>
                            <span t-if="o.state == 'cancel'">Cancelled Purchase Order
                            </span>
                            <span t-field="o.name"/>
                            <t t-if="o.order_title">
                                -
                                <span t-field="o.order_title"/>
                            </t>
                        </h5>
                        <span t-field="o.report_header_text"/>
                        <table class="table table-sm o_main_table"
                               style="margin-top:30px; margin-bottom: 0.3em !important;">
                            <thead
                                    t-att-style="(o.company_id.much_layout_style == 'colorful') and 'color: %s; background-color: %s;' % (secondary ,primary) or 'color: #535353;'">
                                <tr>
                                    <th name="th_postion" class="text-left py-2"
                                        style="border-top:none !important; border-bottom:none !important;">
                                        <strong>Pos</strong>
                                    </th>
                                    <th name="th_description" class="text-left py-2"
                                        style="border-top:none !important; border-bottom:none !important;">
                                        <strong>Description</strong>
                                    </th>

                                    <th name="th_taxes"
                                        t-attf-class="text-center py-2 {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"
                                        style="border-top:none !important; border-bottom:none !important;">
                                        <strong>Taxes</strong>
                                    </th>
                                    <th name="th_date_req" class="text-center py-2"
                                        style="border-top:none !important; border-bottom:none !important;">
                                        <strong>Date Req.</strong>
                                    </th>
                                    <th name="th_quantity" class="text-center py-2"
                                        style="border-top:none !important; border-bottom:none !important;">
                                        <strong>Quantity</strong>
                                    </th>
                                    <th name="th_price_unit"
                                        t-attf-class="text-right py-2 {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"
                                        style="border-top:none !important; border-bottom:none !important;">
                                        <strong>Unit&#160;Price</strong>
                                    </th>
                                    <th name="th_amount" class="text-right py-2"
                                        style="border-top:none !important; border-bottom:none !important;">
                                        <strong>Amount</strong>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="current_subtotal" t-value="0"/>
                                <t t-set="count" t-value="1"/>
                                <t t-foreach="o.order_line" t-as="line">
                                    <t t-set="current_subtotal"
                                       t-value="current_subtotal + line.price_subtotal"
                                       groups="account.group_show_line_subtotals_tax_excluded"/>
                                    <t t-set="current_subtotal"
                                       t-value="current_subtotal + line.price_total"
                                       groups="account.group_show_line_subtotals_tax_included"/>
                                    <tr
                                            t-att-style="'border-top: 1px solid #000000 !important; border-bottom: 1px solid #000000 !important;' if line.display_type in ['line_section'] and o.company_id.much_layout_style == 'bw' else 'background-color: #e9ecef;' if line.display_type in ['line_section'] and o.company_id.much_layout_style in ['colorful','slick'] else ''"
                                            t-att-class="'font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                        <t t-if="not line.display_type">
                                            <td name="td_pos" class="text-left py-2"
                                                style="border:none !important;"
                                            >
                                                <span t-esc="count"/>
                                            </td>
                                            <td id="product" name="td_name"
                                                class="text-left py-2"
                                                style="border:none !important;">
                                                <span t-field="line.name"/>
                                            </td>

                                            <td name="td_taxes"
                                                t-attf-class="text-center py-2 {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"
                                                style="border:none !important;">
                                                <span t-esc="', '.join(map(lambda x: x.description, line.taxes_id))"/>
                                            </td>
                                            <td name="td_date" class="text-center py-2"
                                                style="border:none !important;">
                                                <span t-field="line.date_planned"
                                                      t-options="{'widget': 'datetime'}"/>
                                            </td>
                                            <td class="text-right py-2"
                                                style="border:none !important;">
                                                <span t-field="line.product_qty"/>
                                                <span t-field="line.product_uom"/>
                                            </td>
                                            <td name="td_unit"
                                                t-attf-class="text-right py-2 {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"
                                                style="border:none !important;">
                                                <span t-field="line.price_unit"
                                                      t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                            </td>
                                            <td name="td_subtotal"
                                                class="text-right o_price_total py-2  {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"
                                                style="border:none !important;">
                                                <span t-field="line.price_subtotal"
                                                      t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                            </td>
                                        </t>
                                        <t t-if="line.display_type == 'line_section'">
                                            <td colspan="99" id="section" class="py-2"
                                                style="border: none !important;">
                                                <span t-field="line.name"
                                                      t-options="{'widget': 'text'}"/>
                                            </td>
                                            <t t-set="current_section" t-value="line"/>
                                            <t t-set="current_subtotal" t-value="0"/>
                                        </t>
                                        <t t-if="line.display_type == 'line_note'">
                                            <td name="td_pos" class="text-left py-2"
                                                style="border:none !important;">
                                                <span>&#160;</span>
                                            </td>
                                            <td colspan="99" id="note" class="py-2"
                                                style="border: none !important;">
                                                <span t-field="line.name"
                                                      t-options="{'widget': 'text'}"/>
                                            </td>
                                        </t>
                                        <t t-if="line.display_type not in ['line_section', 'line_note']"
                                           t-set="count" t-value="count+1"/>
                                    </tr>
                                    <t t-if="current_section and (line_last or o.order_line[line_index+1].display_type == 'line_section')">
                                        <tr class="is-subtotal text-right">
                                            <td colspan="99" id="subtotal" class="py-1"
                                                style="border: none !important;">
                                                <strong class="mr16">Subtotal</strong>
                                                <span t-esc="current_subtotal"
                                                      t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                            </tbody>
                        </table>

                        <div class="clearfix" name="so_total_summary">
                            <div id="total" class="row" name="total">
                                <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto">
                                    <table class="table table-sm">
                                        <!-- Tax totals -->
                                        <t t-set="tax_totals"
                                           t-value="json.loads(o.tax_totals_json)"/>
                                        <tr class="o_subtotal"
                                            t-att-style="'border-top:1px solid #e9ecef !important;' if o.company_id.much_layout_style in ['colorful','slick'] else 'border-top:1px solid #000000 !important;'">
                                            <td name="td_amount_untaxed_label"
                                                class="py-2"
                                                style="border:none !important;">
                                                <strong>Untaxed Amount</strong>
                                            </td>
                                            <td name="td_amount_untaxed"
                                                class="text-right py-2"
                                                style="border:none !important;">
                                                <span t-field="o.amount_untaxed"/>
                                            </td>
                                        </tr>
                                        <t t-foreach="tax_totals['subtotals']"
                                           t-as="subtotal">
                                            <t t-set="subtotal_to_show"
                                               t-value="subtotal['name']"/>
                                            <t t-foreach="tax_totals['groups_by_subtotal'][subtotal_to_show]"
                                               t-as="amount_by_group">
                                                <tr style="margin: 0;">
                                                    <t t-if="len(tax_totals['groups_by_subtotal'][subtotal_to_show]) > 1">
                                                        <td name="td_amount_by_group_label"
                                                            class="py-2"
                                                            style="border:none !important;">
                                                            <span>
                                                                <span t-esc="amount_by_group['tax_group_name']"/>
                                                            </span>
                                                        </td>
                                                        <td name="td_amount_by_group"
                                                            class="text-right o_price_total py-2"
                                                            style="border:none !important;">
                                                            <span t-esc="amount_by_group['formatted_tax_group_amount']"/>
                                                        </td>
                                                    </t>
                                                    <t t-else="">
                                                        <td name="td_amount_by_group_label_3"
                                                            class="py-2"
                                                            style="border:none !important;">
                                                            <span>
                                                                <span t-esc="amount_by_group['tax_group_name']"/>
                                                            </span>
                                                        </td>
                                                        <td name="td_amount_by_group_3"
                                                            style="border:none !important;"
                                                            class="text-right o_price_total py-2">
                                                            <span t-esc="amount_by_group['formatted_tax_group_amount']"/>
                                                        </td>
                                                    </t>
                                                </tr>
                                            </t>
                                        </t>
                                        <tr class="o_total"
                                            t-att-style="'border-top:1px solid #e9ecef !important;' if o.company_id.much_layout_style in ['colorful','slick'] else 'border-top:2px solid #000000 !important;'">
                                            <td name="td_amount_total_label"
                                                class="py-2"
                                                style="border: none !important;">
                                                <span>
                                                    <strong>Total</strong>
                                                </span>
                                            </td>
                                            <td name="td_amount_total"
                                                class="text-right py-2"
                                                style="border: none !important;">
                                                <span t-field="o.amount_total"/>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <span class="terms" t-field="o.notes"/>
                        <div class="oe_structure"/>
                    </div>
                </t>
            </t>
        </field>
    </record>
</odoo>