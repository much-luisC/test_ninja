<?xml version="1.0"?>
<odoo>
  <template id="report_purchaseorder_much_custom_din5008" inherit_id="purchase.report_purchaseorder">
    <xpath expr="/t" position="replace">
      <t t-name="purchase.report_purchaseorder">
        <t t-call="web.html_container">
          <t t-foreach="docs" t-as="o">
            <t t-set="report" t-value="o.sudo().company_id.external_report_layout_id.name.split('_')[-1] if o.sudo().company_id.external_report_layout_id and o.sudo().company_id.external_report_layout_id.name.split('_')[-1] not in ['background', 'boxed', 'clean', 'standard', 'document', 'din5008'] else ''" />
            <t t-if="report != ''" t-call="updater_purchase.report_purchaseorder_document_din5008_{{report}}" t-lang="o.partner_id.lang" />
            <t t-else="" t-call="purchase.report_purchaseorder_document" t-lang="o.partner_id.lang" />
          </t>
        </t>
      </t>
    </xpath>
  </template>
</odoo>