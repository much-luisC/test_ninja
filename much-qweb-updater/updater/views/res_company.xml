<odoo>
    <data>
        <record id="res_company_form_updater_custom" model="ir.ui.view">
            <field name="name">res.company.form.updater.custom</field>
            <field name="model">res.company</field>
            <field name="priority" eval="30"/>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='company_registry']" position="after">
                    <field name="managing_partner" />
                    <field name="logo_position" widget="radio"
                           string="Logo Position" invisible="1"/>
                    <field name="header_address_position" widget="radio"
                           string="Header Address Position" invisible="1"/>
                    <field name="much_layout_style" widget="radio"
                           string="Much Layout Style" invisible="1"/>
                    <field name="logo_width" invisible="1"/>
                    <field name="logo_width_unit" invisible="1"/>
                    <field name="logo_height" invisible="1"/>
                    <field name="logo_height_unit" invisible="1"/>
                    <field name="no_of_bank_accounts" invisible="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>